<?xml version="1.0" encoding="UTF-8"?>

        <android.support.constraint.ConstraintLayout tools:context="com.example.snapchatclone.MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="200dp" android:layout_width="200dp" app:srcCompat="@color/colorAccent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:id="@+id/createSnapImageView"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:id="@+id/chooseImageButton" app:layout_constraintTop_toBottomOf="@+id/createSnapImageView" android:text="Choose Image" android:onClick="chooseImageClicked"
            tools:ignore="OnClick"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:id="@+id/messageEditText" app:layout_constraintTop_toBottomOf="@+id/chooseImageButton" android:inputType="textPersonName" android:hint="Message" android:ems="10"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:id="@+id/nextButton"
            app:layout_constraintTop_toBottomOf="@+id/messageEditText" android:text="next"
            android:onClick="nextClicked" tools:ignore="OnClick"/>

</android.support.constraint.ConstraintLayout>